= render 'shared/header'
.question_info__title= "タイトル: #{ @question.title } "
- if @question.image.present?
  = image_tag @question&.image_url, alt: @question.title, class: 'question_info__image'
.question_info__text= "説明: #{ @question.text } "

= form_with model: @answer, local: true do |f|
  = render 'shared/error_messages', model_object: @answer
  .answer_form__label_and_input
    = f.label :text
    = f.text_area :text

  = f.fields_for @answer.answer_images.build do |ff|
    .answer_images_form__label_and_input
      .flex
        = ff.label :image
        %span (最大5MBまで)
      = ff.file_field :image, multiple: true
  = f.hidden_field :question_id, value: @question.id
  = f.submit '登録する'

.m-user-image
  = image_tag AnswerImage.last.image_url
  .m-user-image__name
    .a-text-primary.a-text-xlarge= "氏名: #{ @user.name }"
  .m-user-image__kana
    .a-text-secondary.a-text-medium (ふりがなかりかり)
  .m-user-image__id
    .a-text-secondary.a-text-medium= "生徒ID: #{ @user.school_user(current_teacher_school).id }"




.teacher_user_show
  .flex
    .teacher_user_show__th.mr8= User.human_attribute_name(:name) + ':'
    .teacher_user_show__ele= @user.name
  .flex
    .teacher_user_show__th.mr8= User.human_attribute_name(:email) + ':'
    .teacher_user_show__ele= @user.email
  .flex
    .teacher_user_show__th.mr8 所属校:
    .teacher_user_show__ele= @user.main_and_sub_school_buildings_names_in(current_teacher_school)

.teacher_user_show
  %hr
  = link_to '所属校追加', new_teacher_user_school_building_user_path(@user)
.teacher_user_show
  %hr
  = link_to '受講科目追加', new_teacher_user_lesson_group_user_path(@user)

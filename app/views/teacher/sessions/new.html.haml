.user_form__title 教師ログイン
.user_form
  = form_with scope: :session, url: teacher_login_path, local: true do |f|
    .user_form__label_and_input
      = f.label :login_id, Teacher.human_attribute_name(:login_id)
      = f.text_field :login_id
    .user_form__label_and_input
      = f.label :password, Teacher.human_attribute_name(:password)
      = f.password_field :password
    .user_form__label_and_input--checkbox
      = f.check_box :remember_me
      = f.label :remember_me, 'ログイン状態を保持する'
    = f.hidden_field :login_path, value: @login_path
    = f.submit 'ログイン', class: 'user_form__submit_btn'

.flex
  .answer_groups
    - @answers&.each do |answer|
      .answer_group
        .answer_group__text= answer.text
        .answer_group__images
          - answer&.answer_images&.each do |answer_image|
            .answer_group__image= image_tag answer_image&.image_url, class: 'answer_group__image'

  .answer_check_area
    -# .answer_check_form
    -#   =form_with model: @comment

    .answer_check_form_button_area
      - if @back_answer_exist
        .answer_checking_backs__link= link_to '前の解答へ', @back_answer_path

      - if @next_answer_exist
        .answer_checking_next__link= link_to '次の解答へ', @next_answer_path
      - if @next_lesson_exist
        .answer_checking_next__link= link_to '次の授業へ', @next_lesson_path

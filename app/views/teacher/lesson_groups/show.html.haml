.mt16.ml16 講座詳細
.flex.mt24.ml16
  .mr16.a-text-large= @lesson_group.name
  .mr16.a-text-large= "#{@lesson_group.school_year}年度"
  .mr16.a-text-large= "対象: #{ @lesson_group.target_school_grade }"
  .mr16.a-text-large= @lesson_group.school_building.name
  .ml24.a-text-large= link_to '講座編集', edit_teacher_lesson_group_path(@lesson_group)
  .ml24.a-text-large= link_to '授業追加', new_teacher_lesson_group_lesson_path(@lesson_group)
  .ml24.a-text-large= link_to '一覧に戻る', teacher_lesson_groups_path
.mt40
.mt16 登録授業一覧
- if @lessons.present?
  = paginate @lessons
  %table.o-table-simple.mr40
    %thead.o-table-simple__thead
      %th.o-table-simple__th= Lesson.human_attribute_name(:name)
      %th.o-table-simple__th= Lesson.human_attribute_name(:teacher_id)
      %th.o-table-simple__th= Lesson.human_attribute_name(:start_at)
      %th.o-table-simple__th= Lesson.human_attribute_name(:end_at)
      %th.o-table-simple__th
    - @lessons.each do |lesson|
      %tr.o-table-simple__tr
        %td.o-table-simple__td= lesson.name
        %td.o-table-simple__td= lesson.teacher.name
        %td.o-table-simple__td= lesson.decorate.start_time_with_y
        %td.o-table-simple__td= lesson.decorate.end_time_with_y
        %td.o-table-simple__td= link_to '編集', '#'
  = paginate @lessons
.mt40
.mb8 登録生徒一覧
- if @users.present?
  = paginate @users
  %table.o-table-simple
    %thead.o-table-simple__thead
      %th.o-table-simple__th= SchoolUser.human_attribute_name(:id)
      %th.o-table-simple__th= User.human_attribute_name(:name)
      -# %th.o-table-simple__th 学年
      %th.o-table-simple__th 所属校舎
      %th.o-table-simple__th アカウント有効日
    - @users.each do |user|
      - school_user = user.school_user(current_teacher_school)
      %tr.o-table-simple__tr
        %td.o-table-simple__td= school_user.id
        %td.o-table-simple__td= user.name
        %td.o-table-simple__td= user.main_school_building(current_teacher_school)&.name || '所属なし'
        %td.o-table-simple__td= school_user.decorate.activated_at
  = paginate @users

- else
  %p 生徒はまだいません

.user_form_session__title ログイン
= image_tag asset_path('marutsuke.jpg'), alt: 'marutsuke_logo', height: '100', width: '100', class: 'login_logo'
.user_form_session
  = form_with scope: :session, url: login_path, local: true do |f|
    - if @email_login
      .user_form_session__label_and_input
        = f.label :email, User.human_attribute_name(:email)
        = f.email_field :email
    - else
      .user_form_session__label_and_input
        = f.label :login_id, User.human_attribute_name(:login_id)
        = f.text_field :login_id
    .user_form_session__label_and_input
      = f.label :password, User.human_attribute_name(:password), class: 'required'
      = f.password_field :password
    .user_form_session__label_and_input--checkbox
      = f.check_box :remember_me
      = f.label :remember_me, '次回から自動的にログイン'
      =f.hidden_field :school_login_path, value: @school&.login_path
    = f.submit 'ログイン', class: 'user_form_session__submit_btn'
    - if @email_login
      .user_form_session__link
        = link_to 'ログインIDでログインする', login_path(login_path: @school&.login_path)
    - else
      .user_form_session__link
        = link_to 'メールアドレスでログインする', login_path(login_path: @school&.login_path, email: true)

<%=render "shared/header"%>
<div class="card-contains">
  <%@books.each do |book|%>
    <div class="card card-contains__card" style="width: 18rem;">
      <%=image_tag("#{book.image.url}",class:"card-img-top", alt:"本の画像")%>
      <div class="card-body">
        <h5 class="card-title"><%=book.title%></h5>
        <p class="card-text"></p>
        <%=link_to"この本を購入する", buy_path(book.id), class:"btn btn-primary"%>
      </div>
    </div>
  <%end%>
</div>

<%= render "shared/header" %>
  <div class="breadcrumbs">
    <span><%=@book.title%></span>
    <%=fa_icon("chevron-right breadcrumbs__chevron")%>
    <span><%= @chapter.chapter%></span>
    <%=fa_icon("chevron-right breadcrumbs__chevron")%>
    <span><%= @section.section%></span>
  </div>

<div class="row justify-content-around questions animated bounceInDown faster">
<% i=1 %>
<% @questions.each do |question|%>
  <div class="card off col-10 col-lg-5 question-card">
    <%# <%if question.image 画像を入れる場所%>
      <%# <img src="question.imgage" class="card-img-top" alt="画像">
    <%end%>
    <div class="card-body">
      <h5 class="card-title question-text">[<%=i%>]</h5>
      <p class="card-text question-text"><%= simple_format(question.text) %></p>
    </div>
    <ul class="list-group list-group-flush">
      <% j = 1 %>
      <% question.small_questions.each do |small_question|%>
      <li class="list-group-item"><span>(<%=j%>) </span><%= small_question.text %></li>
      <% j += 1%>
      <% end %>
    </ul>
    <div class="row">
    <%= link_to "解答する",section_question_path(@section,question), class: "btn btn-primary question-text col-3 offset-8  mt-2 mb-2 mr-2", data: {"turbolinks" => false} %>
    </div>
  </div>
  <%i += 1%>
<%end%>
</div>

<%= render "shared/header" %>
本の追加ページ
<div class="col-4 card float-right mt-5 mr-3" >
  <div class="card-body">
    <div>本の追加</div>
    <%= form_with(model: @book, url: "/books") do |f|%>
      <%= f.text_field :title ,class: "col-8 mt-1",autocomplete:'off'%>
      <label for="book-image">
        <i class="fa fa-image book-image-icon"></i>
        <%= f.file_field :image, class: "col-8 mt-1", id: "book-image",style:"display:none;"%>
      </label>
      <%= f.submit "追加", class:"btn btn-primary btn-sm  add-section section-lists col-3 float-right"%>
    <%end%>
  </div>
</div>
<% @books.each do|book| %>
  <div class="col-6 offset-1  card mt-5">
    <div class="card-body">
      <h5 class="card-title">
        <%= book.title %>
      </h5>
      <li class="" data-book_id = <%= book.id %> style="list-style:none;">
        <a class="fa fa-pencil-square-o icon" href="/books/<%=book.id%>/edit"></a>
      </li>
    </div>
    <ul class="list-group list-group-flush">
      <%book.chapters.each do |chapter|%>
      <li class="list-group-item"><%= chapter.chapter %></li>
      <% end %>
    </ul>
  </div>
<% end %>
